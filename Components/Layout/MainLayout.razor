@inherits LayoutComponentBase

@* MainLayout: renders `NavMenu`, page content, and flushes toasts *@

@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts
@inject IJSRuntime JSRuntime
@using FinalAssignemnt_APDP.Constants

<div class="page">
    <div class="sidebar">
        
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">??</a>
</div>

<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-absolute top-0 end-0 p-3"></div>
</div>

@code {
    // Flush toast queue to browser via JS interop
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await Toasts.FlushAsync(JSRuntime);
    }
}