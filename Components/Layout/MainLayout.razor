@inherits LayoutComponentBase
@implements IDisposable
@using Microsoft.AspNetCore.Components.Authorization

@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<div class="page">
    @if (ShowSidebar)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        @if (ShowSidebar)
        {
            <div class="nav-item">
                <NavLink href="profile"></NavLink>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool isAuthenticated = false;
    private string currentUrl = "";

    // Logic: Show Sidebar when (Logged in) OR (Not on home page)
    // Hide when: (Not logged in) AND (On home page - currentUrl is empty)
    private bool ShowSidebar => isAuthenticated || !string.IsNullOrEmpty(currentUrl);

    protected override async Task OnInitializedAsync()
    {
        // 1. Get current URL
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);

        // 2. Register event to track when user navigates
        NavigationManager.LocationChanged += OnLocationChanged;

        // 3. Check authentication status
        await CheckAuthStatus();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        await CheckAuthStatus();
        StateHasChanged();
    }

    private async Task CheckAuthStatus()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
    }

    public void Dispose()
    {
        // Unsubscribe from event to avoid memory leaks
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}