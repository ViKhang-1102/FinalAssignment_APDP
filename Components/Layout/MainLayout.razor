@inherits LayoutComponentBase
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts
@inject IJSRuntime JSRuntime
@using FinalAssignemnt_APDP.Constants

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="@AppRoutes.ManageAccount">
                <span class="bi bi-person-circle" aria-hidden="true"></span> Profile
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-absolute top-0 end-0 p-3"></div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await Toasts.FlushAsync(JSRuntime);
    }
}
