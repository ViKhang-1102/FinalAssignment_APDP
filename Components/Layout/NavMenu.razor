@implements IDisposable
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable min-vh-100 text-white bg-sidebar-gradient"
     onclick="document.querySelector('.navbar-toggler').click()">

    <nav class="flex-column pt-4">

        <div class="nav-item px-2">
            <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All">
                <i class="bi bi-speedometer2 me-2 fs-5" aria-hidden="true"></i>
                <span>Home</span>
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-divider"></div>
                <div class="px-4 pb-2 text-uppercase text-white-50 small fw-bold" style="font-size: 0.7rem;">Administration</div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="departments">
                        <i class="bi bi-buildings-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>Departments</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="majors">
                        <i class="bi bi-mortarboard-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>Majors</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="semesters">
                        <i class="bi bi-calendar-week-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>Semesters</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="subjects">
                        <i class="bi bi-collection-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>Subjects</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="courses">
                        <i class="bi bi-easel-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>Courses</span>
                    </NavLink>
                </div>

                <div class="nav-divider"></div>
                <div class="px-4 pb-2 text-uppercase text-white-50 small fw-bold" style="font-size: 0.7rem;">System</div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="users">
                        <i class="bi bi-people-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>User Management</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="profile">
                        <i class="bi bi-shield-lock me-2 fs-5" aria-hidden="true"></i>
                        <span>Account</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Lecture">
            <Authorized>
                <div class="nav-divider"></div>
                <div class="px-4 pb-2 text-uppercase text-white-50 small fw-bold" style="font-size: 0.7rem;">Teaching</div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="courses">
                        <i class="bi bi-easel-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>My Courses</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="#">
                        <i class="bi bi-calendar3 me-2 fs-5" aria-hidden="true"></i>
                        <span>Schedule</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Student">
            <Authorized>
                <div class="nav-divider"></div>
                <div class="px-4 pb-2 text-uppercase text-white-50 small fw-bold" style="font-size: 0.7rem;">Learning</div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="courses">
                        <i class="bi bi-journal-bookmark-fill me-2 fs-5" aria-hidden="true"></i>
                        <span>My Classes</span>
                    </NavLink>
                </div>

                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="profile">
                        <i class="bi bi-person-badge me-2 fs-5" aria-hidden="true"></i>
                        <span>My Profile</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-divider"></div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="profile">
                        <i class="bi bi-person-circle me-2 fs-5" aria-hidden="true"></i>
                        <span>@context.User.Identity?.Name</span>
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <form action="Account/Logout" method="post" class="m-0 p-0">
                        <AntiforgeryToken />
                        <!-- Ensure ReturnUrl always redirects to home -->
                        <input type="hidden" name="ReturnUrl" value="/" />
                        <button type="submit" class="nav-link btn btn-link w-100 text-start d-flex align-items-center border-0">
                            <i class="bi bi-box-arrow-right me-2 fs-5" aria-hidden="true"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="Account/Register">
                        <i class="bi bi-person-plus me-2 fs-5" aria-hidden="true"></i>
                        <span>Register</span>
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link d-flex align-items-center" href="Account/Login">
                        <i class="bi bi-box-arrow-in-right me-2 fs-5" aria-hidden="true"></i>
                        <span>Login</span>
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <div class="pb-5"></div>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}