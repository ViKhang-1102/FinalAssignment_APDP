@page "/Account/Register"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using FinalAssignemnt_APDP.Data

@inject UserManager<ApplicationUser> UserManager
@inject IUserStore<ApplicationUser> UserStore
@inject SignInManager<ApplicationUser> SignInManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject ILogger<Register> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Register</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="bg-gradient-primary h-2"></div>

                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-5">
                        <div class="d-inline-flex align-items-center justify-content-center bg-soft-success text-success rounded-circle p-3 shadow-sm mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-person-plus-fill fs-1"></i>
                        </div>
                        <h2 class="fw-bold text-dark">Create an Account</h2>
                        <p class="text-muted">Join SIMS Portal to manage your academic profile.</p>
                    </div>

                    <StatusMessage Message="@Message" />

                    <EditForm Model="Input" asp-route-returnUrl="@ReturnUrl" method="post" OnValidSubmit="RegisterUser" FormName="register" Enhance>
                        <DataAnnotationsValidator />

                        <div class="mb-4">
                            <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                        </div>

                        <h6 class="text-secondary fw-bold text-uppercase small mb-3">
                            <i class="bi bi-shield-lock me-1"></i> Account Credentials
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label class="form-label fw-bold text-secondary small">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
                                    <InputText @bind-Value="Input.Email" class="form-control bg-light border-start-0" autocomplete="username" placeholder="name@example.com" />
                                </div>
                                <ValidationMessage For="() => Input.Email" class="text-danger small mt-1" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold text-secondary small">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-key"></i></span>
                                    <InputText type="password" @bind-Value="Input.Password" class="form-control bg-light border-start-0" autocomplete="new-password" placeholder="******" />
                                </div>
                                <ValidationMessage For="() => Input.Password" class="text-danger small mt-1" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold text-secondary small">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-check-all"></i></span>
                                    <InputText type="password" @bind-Value="Input.ConfirmPassword" class="form-control bg-light border-start-0" autocomplete="new-password" placeholder="******" />
                                </div>
                                <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger small mt-1" />
                            </div>
                        </div>

                        <h6 class="text-secondary fw-bold text-uppercase small mb-3 mt-4 border-top pt-4">
                            <i class="bi bi-person-vcard me-1"></i> Personal Details
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-secondary small">Full Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-person"></i></span>
                                    <InputText @bind-Value="Input.Name" class="form-control bg-light border-start-0" placeholder="e.g. Nguyen Van A" />
                                </div>
                                <ValidationMessage For="() => Input.Name" class="text-danger small mt-1" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold text-secondary small">Student ID</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-card-heading"></i></span>
                                    <InputText @bind-Value="Input.StudentId" class="form-control bg-light border-start-0 font-monospace" placeholder="e.g. 2100123" />
                                </div>
                                <ValidationMessage For="() => Input.StudentId" class="text-danger small mt-1" />
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-bold text-secondary small">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-geo-alt"></i></span>
                                    <InputText @bind-Value="Input.Address" class="form-control bg-light border-start-0" placeholder="City, Country" />
                                </div>
                                <ValidationMessage For="() => Input.Address" class="text-danger small mt-1" />
                            </div>
                        </div>

                        <div class="d-grid mb-4 pt-3">
                            <button type="submit" class="btn btn-gradient-primary btn-lg rounded-pill shadow-sm fw-bold py-3 fs-5">
                                Register Account
                            </button>
                        </div>

                        <div class="text-center text-muted">
                            Already have an account?
                            <a href="Account/Login" class="text-primary fw-bold text-decoration-none">
                                Log in here
                            </a>
                        </div>

                    </EditForm>

                    <section class="mt-5">
                        <div class="d-flex align-items-center mb-3">
                            <hr class="flex-grow-1 border-secondary opacity-25">
                            <span class="px-3 text-muted small text-uppercase">Or register with</span>
                            <hr class="flex-grow-1 border-secondary opacity-25">
                        </div>
                        <div class="d-grid">
                            <ExternalLoginPicker />
                        </div>
                    </section>

                </div>
            </div>

            <div class="text-center mt-4 text-muted small">
                &copy; 2025 SIMS Portal. All rights reserved.
            </div>

        </div>
    </div>
</div>

