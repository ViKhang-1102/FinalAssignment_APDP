@page "/majors/create"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Major</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-mortarboard-fill me-2"></i>Create Major
                    </h2>
                    <p class="text-muted mb-0">Define a new academic major.</p>
                </div>
                <a href="/majors" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">

                    <EditForm method="post" Model="Major" OnValidSubmit="AddMajor" FormName="create" Enhance>
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                        </div>

                        <div class="mb-4">
                            <label for="name" class="form-label fw-bold text-secondary">
                                <i class="bi bi-tag-fill me-1"></i>Major Name
                            </label>
                            <InputText id="name"
                                       @bind-Value="Major.Name"
                                       class="form-control form-control-lg"
                                       placeholder="e.g. Software Engineering" />
                            <ValidationMessage For="() => Major.Name" class="text-danger small mt-1" />
                        </div>

                        <div class="mb-4">
                            <label for="departmentId" class="form-label fw-bold text-secondary">
                                <i class="bi bi-buildings-fill me-1"></i>Department
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-search"></i>
                                </span>
                                <InputSelect id="departmentId"
                                             @bind-Value="Major.DepartmentId"
                                             class="form-select form-select-lg border-start-0 ps-0">
                                    <option value="">-- Select Department --</option>
                                    @foreach (var department in DbFactory.CreateDbContext().Departments)
                                    {
                                        <option value="@department.Id">@department.Name</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="form-text text-muted small mt-1">
                                Select the department that manages this major.
                            </div>
                            <ValidationMessage For="() => Major.DepartmentId" class="text-danger small mt-1" />
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/majors" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                            <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                <i class="bi bi-check-lg me-2"></i>Create Major
                            </button>
                        </div>

                    </EditForm>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .input-group-text {
        background-color: #fff;
        border-color: #dee2e6;
    }

    .form-select-lg {
        font-size: 1rem;
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
    }

    .form-select:focus {
        border-color: #86b7fe;
        box-shadow: none;
    }

    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
    }

    .input-group:focus-within .form-select {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>

@code {
    [SupplyParameterFromForm]
    private Major Major { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddMajor()
    {
        using var context = DbFactory.CreateDbContext();
        context.Majors.Add(Major);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/majors");
    }
}
