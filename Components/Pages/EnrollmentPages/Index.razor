@page "/enrollments"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using FinalAssignemnt_APDP.Data
@using FinalAssignemnt_APDP.Constants
@implements IAsyncDisposable
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory

<PageTitle>Enrollments</PageTitle>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
            <p class="text-xs uppercase tracking-widest text-slate-500">Assignments</p>
            <h1 class="text-3xl font-bold text-slate-900">Enrollments</h1>
            <p class="text-sm text-slate-500">Track which students join each course.</p>
        </div>
        <a href="@AppRoutes.EnrollmentsCreate" class="inline-flex items-center gap-2 rounded-2xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow transition hover:-translate-y-0.5 hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600">
            <i class="bi bi-person-plus"></i> Assign Student
        </a>
    </div>

    <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
        <div class="overflow-x-auto">
            <QuickGrid Class="min-w-full divide-y divide-slate-200 text-sm text-slate-600" Items="context.Enrollments">
                <PropertyColumn Title="Student" Property="enrollment => enrollment.StudentID" />
                <PropertyColumn Title="Course" Property="enrollment => enrollment.CourseID" />

                <TemplateColumn Title="Actions" Context="enrollment">
                    <div class="flex flex-wrap items-center justify-end gap-2">
                        <a class="@GetActionClass("indigo")" href="@AppRoutes.EnrollmentsEdit(enrollment.Id)"><i class="bi bi-pencil"></i> Edit</a>
                        <a class="@GetActionClass("sky")" href="@AppRoutes.EnrollmentsDetails(enrollment.Id)"><i class="bi bi-info-circle"></i> Detail</a>
                        <a class="@GetActionClass("rose")" href="@AppRoutes.EnrollmentsDelete(enrollment.Id)"><i class="bi bi-trash"></i> Delete</a>
                    </div>
                </TemplateColumn>
            </QuickGrid>
        </div>
    </div>
</div>

@code {
    private ApplicationDbContext context = default!;
    private const string ActionBase = "inline-flex items-center gap-1.5 rounded-full border px-3 py-1.5 text-xs font-semibold transition hover:-translate-y-0.5 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2";

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();

    private string GetActionClass(string tone) => tone switch
    {
        "sky" => $"{ActionBase} border-sky-100 text-sky-600 hover:bg-sky-50 focus-visible:outline-sky-500",
        "rose" => $"{ActionBase} border-rose-100 text-rose-600 hover:bg-rose-50 focus-visible:outline-rose-500",
        _ => $"{ActionBase} border-indigo-100 text-indigo-600 hover:bg-indigo-50 focus-visible:outline-indigo-500"
    };
}
