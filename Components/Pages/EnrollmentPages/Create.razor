@page "/enrollments/create"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Enrollment</PageTitle>

<div class="max-w-3xl space-y-6">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900">Create enrollment</h1>
        <p class="text-sm text-slate-500">Assign a student to a course.</p>
    </div>

    <div class="rounded-2xl bg-white p-6 shadow-sm">
        @if (Students.Count == 0 || Courses.Count == 0)
        {
            <div class="space-y-3 text-sm text-slate-600">
                <p class="font-medium text-slate-900">Missing related data</p>
                @if (Students.Count == 0)
                {
                    <p>- No students available. Please create a student first.</p>
                }
                @if (Courses.Count == 0)
                {
                    <p>- No courses available. Please create a course first.</p>
                }
            </div>
        }
        else
        {
            <EditForm method="post" Model="Enrollment" OnValidSubmit="AddEnrollment" FormName="create" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="mb-4 text-sm text-rose-600" role="alert" />
                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <p class="mb-4 rounded-lg bg-rose-50 px-3 py-2 text-sm text-rose-700">@ErrorMessage</p>
                }

                <div class="grid gap-4 md:grid-cols-2">
                    <div class="space-y-1">
                        <label for="studentid" class="text-sm font-medium text-slate-700">Student</label>
                        <SearchableSelect TValue="string" TItem="ApplicationUser"
                                          Items="Students"
                                          @bind-Value="Enrollment.StudentID"
                                          ValueSelector="student => student.Id"
                                          LabelSelector="student => GetStudentDisplayName(student)"
                                          FilterPlaceholder="Search student..."
                                          PlaceholderOption="-- Select student --"
                                          PlaceholderValue="@string.Empty"
                                          SelectId="studentid" />
                        <ValidationMessage For="() => Enrollment.StudentID" class="text-sm text-rose-600" />
                    </div>
                    <div class="space-y-1">
                        <label for="courseid" class="text-sm font-medium text-slate-700">Course</label>
                        <SearchableSelect TValue="int" TItem="Course"
                                          Items="Courses"
                                          @bind-Value="Enrollment.CourseID"
                                          ValueSelector="course => course.Id"
                                          LabelSelector="course => GetCourseDisplayName(course)"
                                          PlaceholderOption="-- Select course --"
                                          PlaceholderValue="@(0)"
                                          SelectId="courseid" />
                        <ValidationMessage For="() => Enrollment.CourseID" class="text-sm text-rose-600" />
                    </div>
                </div>

                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-indigo-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500">Create</button>
                    <a href="/enrollments" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Enrollment Enrollment { get; set; } = new();

    private List<ApplicationUser> Students { get; set; } = new();
    private List<Course> Courses { get; set; } = new();
    private string? ErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Students = await LoadStudentUsersAsync(context);

        Courses = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Semester)
            .OrderBy(c => c.Name)
            .ThenBy(c => c.Id)
            .ToListAsync();
    }

    private async Task AddEnrollment()
    {
        ErrorMessage = null;

        if (string.IsNullOrWhiteSpace(Enrollment.StudentID))
        {
            ErrorMessage = "Please select a student.";
            return;
        }

        if (Enrollment.CourseID <= 0)
        {
            ErrorMessage = "Please select a course.";
            return;
        }

        using var context = DbFactory.CreateDbContext();

        var studentExists = await context.Users.AnyAsync(u => u.Id == Enrollment.StudentID);
        if (!studentExists)
        {
            ErrorMessage = "Selected student no longer exists.";
            Students = await LoadStudentUsersAsync(context);
            Courses = await context.Courses.Include(c => c.Subject).Include(c => c.Semester).OrderBy(c => c.Name).ThenBy(c => c.Id).ToListAsync();
            return;
        }

        var courseExists = await context.Courses.AnyAsync(c => c.Id == Enrollment.CourseID);
        if (!courseExists)
        {
            ErrorMessage = "Invalid course ID.";
            Courses = await context.Courses.Include(c => c.Subject).Include(c => c.Semester).OrderBy(c => c.Name).ThenBy(c => c.Id).ToListAsync();
            return;
        }

        context.Enrollments.Add(Enrollment);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo(AppRoutes.Enrollments);
    }

    private async Task<List<ApplicationUser>> LoadStudentUsersAsync(ApplicationDbContext context)
    {
        var studentRoleId = await context.Roles
            .Where(r => r.Name == "Student")
            .Select(r => r.Id)
            .FirstOrDefaultAsync();

        if (string.IsNullOrEmpty(studentRoleId))
        {
            return new();
        }

        return await context.Users
            .Where(u => context.UserRoles.Any(ur => ur.UserId == u.Id && ur.RoleId == studentRoleId))
            .OrderBy(u => u.StudentId)
            .ThenBy(u => u.Name)
            .ThenBy(u => u.Email)
            .ToListAsync();
    }

    private static string GetStudentDisplayName(ApplicationUser student)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(student.StudentId))
        {
            parts.Add(student.StudentId!);
        }
        if (!string.IsNullOrWhiteSpace(student.Name))
        {
            parts.Add(student.Name!);
        }

        if (!string.IsNullOrWhiteSpace(student.Email))
        {
            parts.Add(student.Email!);
        }

        return string.Join(" - ", parts);
    }

    private static string GetCourseDisplayName(Course course)
    {
        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(course.Name))
        {
            parts.Add(course.Name!);
        }

        if (!string.IsNullOrWhiteSpace(course.Subject?.Name))
        {
            parts.Add(course.Subject!.Name);
        }

        if (!string.IsNullOrWhiteSpace(course.Semester?.Name))
        {
            parts.Add(course.Semester!.Name);
        }

        parts.Add($"#{course.Id}");
        return string.Join(" | ", parts);
    }
}
