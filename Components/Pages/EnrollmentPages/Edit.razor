@page "/enrollments/edit"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Enrollment</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Assignments</p>
        <h1 class="@UiClasses.SectionTitle">Edit Enrollment</h1>
        <p class="@UiClasses.SectionSubtitle">Adjust which student is attached to which course.</p>
    </div>

    @if (Enrollment is null)
    {
        <div class="@UiClasses.Card text-center text-slate-500">
            <span class="inline-flex items-center gap-2 text-sm"><i class="bi bi-arrow-counterclockwise animate-spin"></i> Loading enrollment...</span>
        </div>
    }
    else
    {
        <div class="@UiClasses.Card">
            <EditForm method="post" Model="Enrollment" OnValidSubmit="UpdateEnrollment" FormName="edit" Enhance class="space-y-5">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-rose-500 text-sm" role="alert" />
                <input type="hidden" name="Enrollment.Id" value="@Enrollment.Id" />
                <div class="grid gap-4 md:grid-cols-2">
                    <div class="@UiClasses.FieldStack">
                        <label for="studentid" class="@UiClasses.Label">Student</label>
                        <InputSelect id="studentid" @bind-Value="Enrollment.StudentID" class="@UiClasses.Input">
                            @foreach (var student in Students)
                            {
                                <option value="@GetStudentValue(student)">@GetStudentLabel(student)</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => Enrollment.StudentID" class="text-rose-500 text-xs" />
                    </div>
                    <div class="@UiClasses.FieldStack">
                        <label for="courseid" class="@UiClasses.Label">Course</label>
                        <InputSelect id="courseid" @bind-Value="Enrollment.CourseID" class="@UiClasses.Input">
                            @foreach (var course in Courses)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => Enrollment.CourseID" class="text-rose-500 text-xs" />
                    </div>
                </div>
                <div class="flex flex-wrap gap-3">
                    <button type="submit" class="@UiClasses.PrimaryButton"><i class="bi bi-save"></i> Save Changes</button>
                    <a class="@UiClasses.GhostButton" href="@AppRoutes.Enrollments"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </EditForm>
        </div>
    }

    <a class="@UiClasses.LinkButton" href="@AppRoutes.Enrollments"><i class="bi bi-arrow-left"></i> Back to enrollments</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Enrollment? Enrollment { get; set; }

    private List<ApplicationUser> Students { get; set; } = new();
    private List<Course> Courses { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Enrollment ??= await context.Enrollments.FirstOrDefaultAsync(m => m.Id == Id);
        Students = await context.Users
            .OrderBy(u => u.Name ?? u.Email ?? u.UserName)
            .ToListAsync();
        Courses = await context.Courses
            .OrderBy(c => c.Name)
            .ToListAsync();

        if (Enrollment is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateEnrollment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Enrollment!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!EnrollmentExists(Enrollment!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo(AppRoutes.Enrollments);
    }

    private bool EnrollmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Enrollments.Any(e => e.Id == id);
    }

    private static string GetStudentLabel(ApplicationUser student)
    {
        var displayId = student.StudentId ?? student.Email ?? student.UserName ?? student.Id;
        return string.IsNullOrWhiteSpace(student.Name) ? displayId : $"{student.Name} ({displayId})";
    }

    private static string GetStudentValue(ApplicationUser student) => student.StudentId ?? student.Email ?? student.UserName ?? student.Id;
}
