@page "/enrollments/edit"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Components.Enrollments
@using FinalAssignemnt_APDP.Data
@using FinalAssignemnt_APDP.Constants
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Enrollment</PageTitle>

@if (Enrollment is null || ScheduleState is null)
{
    <p class="text-slate-500">Loading…</p>
}
else
{
    <div class="max-w-3xl space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Edit enrollment</h1>
            <p class="text-sm text-slate-500">Update course details, schedule, and assign students.</p>
        </div>

        <div class="rounded-2xl bg-white p-6 shadow-sm">
            <EditForm method="post" Model="Enrollment" OnValidSubmit="UpdateEnrollment" FormName="edit">
                <DataAnnotationsValidator />
                <ValidationSummary class="mb-4 text-sm text-rose-600" role="alert" />
                <input type="hidden" name="Enrollment.Id" value="@Enrollment.Id" />
                @if (!string.IsNullOrWhiteSpace(ErrorMessage))
                {
                    <p class="mb-4 rounded-lg bg-rose-50 px-3 py-2 text-sm text-rose-700">@ErrorMessage</p>
                }

                <div class="grid gap-4 md:grid-cols-2">
                    <div class="space-y-1">
                        <div class="flex items-center justify-between">
                            <label for="studentid" class="text-sm font-medium text-slate-700">
                                Student
                                <span class="text-xs text-slate-500">(optional)</span>
                            </label>
                            <button type="button" 
                                    @onclick="ToggleMultipleStudentMode"
                                    class="text-xs font-semibold text-indigo-600 hover:text-indigo-500">
                                @(ShowMultipleStudentMode ? "Single Student" : "Assign Multiple Students")
                            </button>
                        </div>
                        <InputSelect id="studentid" 
                                     @bind-Value="Enrollment.StudentID"
                                     class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100"
                                     disabled="@ShowMultipleStudentMode">
                            <option value="">-- No student assigned --</option>
                            @foreach (var student in Students)
                            {
                                <option value="@student.Id">@EnrollmentDisplayHelper.FormatStudentOption(student)</option>
                            }
                        </InputSelect>
                        <p class="text-xs text-slate-500">
                            @if (ShowMultipleStudentMode)
                            {
                                <span class="text-indigo-600">Multiple student mode enabled. Select students below.</span>
                            }
                            else
                            {
                                <span>Assign a student to this course enrollment.</span>
                            }
                        </p>
                    </div>
                    <div class="space-y-1">
                        <label for="courseid" class="text-sm font-medium text-slate-700">Course</label>
                        <InputSelect id="courseid" 
                                     @bind-Value="Enrollment.CourseID"
                                     @bind-Value:after="LoadAvailableStudentsForMultipleAsync"
                                     class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100">
                            <option value="0">-- Select course --</option>
                            @foreach (var course in Courses)
                            {
                                <option value="@course.Id">@EnrollmentDisplayHelper.FormatCourseOption(course)</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => Enrollment.CourseID" class="text-sm text-rose-600" />
                    </div>
                </div>

                @if (ShowMultipleStudentMode && Enrollment.CourseID > 0)
                {
                    <div class="mt-4 rounded-2xl border border-indigo-200 bg-indigo-50/30 p-4">
                        <div class="space-y-3">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-semibold text-indigo-900">Assign Multiple Students</p>
                                    <p class="text-xs text-indigo-600">@SelectedStudentsForMultiple.Count student(s) selected</p>
                                </div>
                                <div class="flex gap-2">
                                    <button type="button" @onclick="SelectAllAvailableStudents" class="text-xs font-semibold text-indigo-700 hover:text-indigo-600">Select All</button>
                                    <button type="button" @onclick="ClearAllSelectedStudents" class="text-xs font-semibold text-indigo-700 hover:text-indigo-600">Clear All</button>
                                </div>
                            </div>

                            @if (AvailableStudentsForMultiple.Count == 0)
                            {
                                <p class="rounded-lg bg-white px-3 py-2 text-sm text-slate-600">
                                    No available students. All students may already be enrolled in this course.
                                </p>
                            }
                            else
                            {
                                <div class="max-h-64 overflow-y-auto rounded-lg border border-indigo-200 bg-white">
                                    <table class="min-w-full divide-y divide-slate-200 text-sm">
                                        <thead class="sticky top-0 bg-slate-50">
                                            <tr class="text-left text-xs font-semibold uppercase tracking-wide text-slate-600">
                                                <th class="px-3 py-2 w-10">
                                                    <input type="checkbox"
                                                           @onchange="ToggleAllAvailableStudents"
                                                           checked="@(SelectedStudentsForMultiple.Count == AvailableStudentsForMultiple.Count && AvailableStudentsForMultiple.Count > 0)"
                                                           class="h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" />
                                                </th>
                                                <th class="px-3 py-2">Student ID</th>
                                                <th class="px-3 py-2">Name</th>
                                                <th class="px-3 py-2">Email</th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-slate-100">
                                            @foreach (var student in AvailableStudentsForMultiple)
                                            {
                                                var isSelected = SelectedStudentsForMultiple.Contains(student.Id);
                                                <tr class="@(isSelected ? "bg-indigo-50" : "") hover:bg-slate-50 cursor-pointer" @onclick="() => ToggleStudentSelection(student.Id)">
                                                    <td class="px-3 py-2">
                                                        <input type="checkbox"
                                                               checked="@isSelected"
                                                               @onclick:stopPropagation="true"
                                                               @onchange="() => ToggleStudentSelection(student.Id)"
                                                               class="h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500" />
                                                    </td>
                                                    <td class="px-3 py-2 font-medium text-slate-900">@student.StudentId</td>
                                                    <td class="px-3 py-2 text-slate-700">@student.Name</td>
                                                    <td class="px-3 py-2 text-slate-600 text-xs">@student.Email</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }

                            @if (SelectedStudentsForMultiple.Count > 0)
                            {
                                <div class="rounded-lg bg-white px-3 py-2 text-sm">
                                    <p class="text-indigo-900">
                                        <strong>@SelectedStudentsForMultiple.Count student(s)</strong> will be enrolled with the same schedule details as this enrollment.
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                }

                <div class="mt-4 rounded-2xl border border-slate-100 bg-slate-50/70 p-4">
                    <p class="text-sm font-semibold text-slate-800">Schedule details</p>
                    <p class="text-xs text-slate-500">Keep this aligned with the real class meetings (days, time, room, total slots).</p>

                    <div class="mt-4 space-y-4">
                        <div class="space-y-1">
                            <label for="day-input" class="text-sm font-medium text-slate-700">Days of the week</label>
                            <InputText id="day-input"
                                       name="Enrollment.DayOfWeek"
                                       placeholder="e.g. 1,3,5"
                                       @bind-Value="DayInput"
                                       @bind-Value:event="oninput"
                                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" />
                            <p class="text-xs text-slate-500">Enter comma-separated numbers (1 = Monday … 7 = Sunday).</p>
                        </div>

                        <div class="grid gap-4 md:grid-cols-2">
                            <div class="space-y-1">
                                <label for="time-slot" class="text-sm font-medium text-slate-700">Time slot</label>
                                <InputSelect id="time-slot"
                                             name="Enrollment.TimeSlot"
                                             @bind-Value="SelectedTimeBlockLabel"
                                             class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100">
                                    <option value="">-- Select 4-hour block --</option>
                                    @foreach (var block in TimeBlockCatalog.All)
                                    {
                                        <option value="@block.Label">@block.Label</option>
                                    }
                                </InputSelect>
                                <p class="text-xs text-slate-500">Each option covers four hours.</p>
                            </div>
                            <div class="space-y-1">
                                <label for="totalslots" class="text-sm font-medium text-slate-700">Total slots</label>
                                <InputNumber TValue="int?"
                                             id="totalslots"
                                             @bind-Value="Enrollment.TotalSlots"
                                             min="0"
                                             class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" />
                            </div>
                        </div>

                        <div class="space-y-1">
                            <label for="room" class="text-sm font-medium text-slate-700">Room</label>
                            <InputText id="room"
                                       placeholder="e.g. Lab 3"
                                       class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100"
                                       @bind-Value="Enrollment.Room" />
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-indigo-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500">Save changes</button>
                    <a href="/enrollments" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Enrollment? Enrollment { get; set; }

    private List<ApplicationUser> Students { get; set; } = new();
    private List<Course> Courses { get; set; } = new();
    private string? ErrorMessage { get; set; }
    private EnrollmentScheduleState? ScheduleState { get; set; }
    
    // Multiple student assignment
    private bool ShowMultipleStudentMode { get; set; } = false;
    private List<ApplicationUser> AvailableStudentsForMultiple { get; set; } = new();
    private HashSet<string> SelectedStudentsForMultiple { get; set; } = new();
    
    private string _dayInput = string.Empty;
    private string SelectedTimeBlockLabel
    {
        get => Enrollment?.TimeSlot ?? string.Empty;
        set
        {
            if (Enrollment is null)
            {
                return;
            }

            Enrollment.TimeSlot = string.IsNullOrWhiteSpace(value) ? null : value;

            if (ScheduleState is null)
            {
                return;
            }

            if (string.IsNullOrWhiteSpace(value))
            {
                ScheduleState.StartTime = null;
                ScheduleState.EndTime = null;
                return;
            }

            if (TimeBlockCatalog.TryGetByLabel(value, out var block) && block is not null)
            {
                ScheduleState.StartTime = block.Start;
                ScheduleState.EndTime = block.End;
            }
        }
    }
    private string DayInput
    {
        get => _dayInput;
        set => ApplyDayInput(value);
    }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Students = await LoadStudentUsersAsync(context);

        Courses = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Semester)
            .OrderBy(c => c.Name)
            .ThenBy(c => c.Id)
            .ToListAsync();

        Enrollment ??= await context.Enrollments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Enrollment is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        ScheduleState = new EnrollmentScheduleState(Enrollment);
        SyncDayInputFromState();
    }

    private async Task UpdateEnrollment()
    {
        ErrorMessage = null;

        if (Enrollment is null)
        {
            ErrorMessage = "Enrollment could not be loaded.";
            return;
        }

        ScheduleState?.Persist();

        // Convert empty string to null for StudentID
        if (string.IsNullOrWhiteSpace(Enrollment.StudentID))
        {
            Enrollment.StudentID = null;
        }

        if (Enrollment.CourseID <= 0)
        {
            ErrorMessage = "Please select a course.";
            return;
        }

        if (Enrollment.TotalSlots is < 0)
        {
            ErrorMessage = "Total slots cannot be negative.";
            return;
        }

        using var context = DbFactory.CreateDbContext();

        // Validate student exists if one is selected (single mode)
        if (!ShowMultipleStudentMode && !string.IsNullOrWhiteSpace(Enrollment.StudentID))
        {
            var studentExists = await context.Users.AnyAsync(u => u.Id == Enrollment.StudentID);
            if (!studentExists)
            {
                ErrorMessage = "Selected student no longer exists.";
                Students = await LoadStudentUsersAsync(context);
                Courses = await context.Courses.Include(c => c.Subject).Include(c => c.Semester).OrderBy(c => c.Name).ThenBy(c => c.Id).ToListAsync();
                return;
            }
        }

        var courseExists = await context.Courses.AnyAsync(c => c.Id == Enrollment.CourseID);
        if (!courseExists)
        {
            ErrorMessage = "Invalid course ID.";
            Courses = await context.Courses.Include(c => c.Subject).Include(c => c.Semester).OrderBy(c => c.Name).ThenBy(c => c.Id).ToListAsync();
            return;
        }

        // Handle multiple student assignment
        if (ShowMultipleStudentMode && SelectedStudentsForMultiple.Count > 0)
        {
            // Verify all selected students exist
            var existingStudentIds = await context.Users
                .Where(u => SelectedStudentsForMultiple.Contains(u.Id))
                .Select(u => u.Id)
                .ToListAsync();

            if (existingStudentIds.Count != SelectedStudentsForMultiple.Count)
            {
                ErrorMessage = "Some selected students no longer exist.";
                await LoadAvailableStudentsForMultipleAsync();
                return;
            }

            // Check for existing enrollments
            var alreadyEnrolledIds = await context.Enrollments
                .Where(e => e.CourseID == Enrollment.CourseID && SelectedStudentsForMultiple.Contains(e.StudentID))
                .Select(e => e.StudentID)
                .ToListAsync();

            if (alreadyEnrolledIds.Count > 0)
            {
                ErrorMessage = $"{alreadyEnrolledIds.Count} student(s) are already enrolled in this course.";
                await LoadAvailableStudentsForMultipleAsync();
                return;
            }

            // Create enrollments for selected students
            var newEnrollments = new List<Enrollment>();
            foreach (var studentId in SelectedStudentsForMultiple)
            {
                newEnrollments.Add(new Enrollment
                {
                    StudentID = studentId,
                    CourseID = Enrollment.CourseID,
                    DayOfWeek = Enrollment.DayOfWeek,
                    Room = Enrollment.Room,
                    TimeSlot = Enrollment.TimeSlot,
                    TotalSlots = Enrollment.TotalSlots
                });
            }

            context.Enrollments.AddRange(newEnrollments);
        }

        // Update the original enrollment
        context.Attach(Enrollment).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!EnrollmentExists(Enrollment.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo(AppRoutes.Enrollments);
    }

    private void ApplyDayInput(string? value)
    {
        _dayInput = value ?? string.Empty;

        if (ScheduleState is null)
        {
            return;
        }

        ScheduleState.SelectedDays.Clear();

        var tokens = _dayInput
            .Split(new[] { ',', ';', '\n', '\r', '\t', ' ' }, StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);

        foreach (var token in tokens)
        {
            if (WeekdayCatalog.TryResolveDay(token, out var day))
            {
                ScheduleState.SelectedDays.Add(day);
            }
        }

        ScheduleState.Persist();
    }

    private void SyncDayInputFromState()
    {
        if (ScheduleState is null)
        {
            _dayInput = string.Empty;
            return;
        }

        _dayInput = ScheduleState.SelectedDays.Count == 0
            ? string.Empty
            : WeekdayCatalog.Serialize(ScheduleState.SelectedDays);
    }

    private bool EnrollmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Enrollments.Any(e => e.Id == id);
    }


    private async Task<List<ApplicationUser>> LoadStudentUsersAsync(ApplicationDbContext context)
    {
        var studentRoleId = await context.Roles
            .Where(r => r.Name == "Student")
            .Select(r => r.Id)
            .FirstOrDefaultAsync();

        if (string.IsNullOrEmpty(studentRoleId))
        {
            return new();
        }

        return await context.Users
            .Where(u => context.UserRoles.Any(ur => ur.UserId == u.Id && ur.RoleId == studentRoleId))
            .OrderBy(u => u.StudentId)
            .ThenBy(u => u.Name)
            .ThenBy(u => u.Email)
            .ToListAsync();
    }

    // Multiple student assignment methods
    private void ToggleMultipleStudentMode()
    {
        ShowMultipleStudentMode = !ShowMultipleStudentMode;
        if (ShowMultipleStudentMode)
        {
            _ = LoadAvailableStudentsForMultipleAsync();
        }
        else
        {
            SelectedStudentsForMultiple.Clear();
            AvailableStudentsForMultiple.Clear();
        }
        StateHasChanged();
    }

    private async Task LoadAvailableStudentsForMultipleAsync()
    {
        if (!ShowMultipleStudentMode || Enrollment?.CourseID <= 0)
        {
            AvailableStudentsForMultiple.Clear();
            return;
        }

        using var context = DbFactory.CreateDbContext();

        var studentRoleId = await context.Roles
            .Where(r => r.Name == "Student")
            .Select(r => r.Id)
            .FirstOrDefaultAsync();

        if (string.IsNullOrEmpty(studentRoleId))
        {
            AvailableStudentsForMultiple = new();
            StateHasChanged();
            return;
        }

        // Get all students
        var allStudents = await context.Users
            .Where(u => context.UserRoles.Any(ur => ur.UserId == u.Id && ur.RoleId == studentRoleId))
            .OrderBy(u => u.StudentId)
            .ThenBy(u => u.Name)
            .ToListAsync();

        // Filter out already enrolled students in this course
        var enrolledStudentIds = await context.Enrollments
            .Where(e => e.CourseID == Enrollment.CourseID && e.StudentID != null)
            .Select(e => e.StudentID)
            .ToListAsync();

        var enrolledSet = enrolledStudentIds.Where(id => id != null).ToHashSet()!;

        AvailableStudentsForMultiple = allStudents
            .Where(s => !enrolledSet.Contains(s.Id))
            .ToList();

        // Clear selections that are no longer available
        SelectedStudentsForMultiple.RemoveWhere(id => !AvailableStudentsForMultiple.Any(s => s.Id == id));
        
        StateHasChanged();
    }

    private void ToggleStudentSelection(string studentId)
    {
        if (!SelectedStudentsForMultiple.Add(studentId))
        {
            SelectedStudentsForMultiple.Remove(studentId);
        }
        StateHasChanged();
    }

    private void ToggleAllAvailableStudents()
    {
        if (SelectedStudentsForMultiple.Count == AvailableStudentsForMultiple.Count)
        {
            SelectedStudentsForMultiple.Clear();
        }
        else
        {
            SelectAllAvailableStudents();
        }
        StateHasChanged();
    }

    private void SelectAllAvailableStudents()
    {
        SelectedStudentsForMultiple.Clear();
        foreach (var student in AvailableStudentsForMultiple)
        {
            SelectedStudentsForMultiple.Add(student.Id);
        }
        StateHasChanged();
    }

    private void ClearAllSelectedStudents()
    {
        SelectedStudentsForMultiple.Clear();
        StateHasChanged();
    }

}