@page "/student/edit-profile"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using FinalAssignemnt_APDP.Data
@using FinalAssignemnt_APDP.Services
@attribute [Authorize(Roles = "Student")]
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject FileUploadService FileUploadService

<PageTitle>Update Information</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-gear text-warning"></i> Update Personal Information</h1>
        </div>
        <a href="/student/profile" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    @if (currentUser == null)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <div class="row">
            <!-- Update form -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="@Input" OnValidSubmit="UpdateProfile">
                            <DataAnnotationsValidator />
                            
                            @if (!string.IsNullOrEmpty(message))
                            {
                                <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                                    @message
                                    <button type="button" class="btn-close" @onclick="() => message = string.Empty"></button>
                                </div>
                            }

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <InputText @bind-Value="Input.Name" class="form-control" placeholder="Enter full name" />
                                    <ValidationMessage For="() => Input.Name" class="text-danger" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Student ID</label>
                                    <InputText @bind-Value="Input.StudentId" class="form-control" disabled />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email</label>
                                    <InputText @bind-Value="Input.Email" class="form-control" disabled />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Phone Number</label>
                                    <InputText @bind-Value="Input.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                    <ValidationMessage For="() => Input.PhoneNumber" class="text-danger" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date of Birth</label>
                                    <InputDate @bind-Value="Input.DOB" class="form-control" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Avatar Upload</label>
                                    <InputFile OnChange="HandleAvatarUpload" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                                    <small class="text-muted">Max file size: 5MB. Supported formats: JPG, PNG, GIF</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <InputTextArea @bind-Value="Input.Address" class="form-control" rows="3" placeholder="Enter address" />
                            </div>

                            <button type="submit" class="btn btn-primary" disabled="@isUpdating">
                                @if (isUpdating)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Updating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle"></i>
                                    <span> Save Changes</span>
                                }
                            </button>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Preview avatar and change password -->
            <div class="col-md-4">
                <!-- Avatar Preview -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Avatar Preview</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(previewAvatarUrl))
                        {
                            <img src="@previewAvatarUrl" class="img-fluid rounded-circle mb-3" 
                                 style="width: 150px; height: 150px; object-fit: cover;" 
                                 alt="Avatar Preview"
                                 @onerror="HandleImageError" />
                        }
                        else
                        {
                            <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                 style="width: 150px; height: 150px;">
                                <i class="bi bi-person-fill text-white" style="font-size: 4rem;"></i>
                            </div>
                        }
                        <p class="text-muted small mb-0">Current avatar</p>
                    </div>
                </div>

                <!-- Change Password -->
                <div class="card shadow-sm">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Change Password</h5>
                    </div>
                    <div class="card-body">
                        <EditForm Model="@PasswordInput" OnValidSubmit="ChangePassword">
                            <DataAnnotationsValidator />

                            @if (!string.IsNullOrEmpty(passwordMessage))
                            {
                                <div class="alert @(isPasswordSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                                    @passwordMessage
                                    <button type="button" class="btn-close" @onclick="() => passwordMessage = string.Empty"></button>
                                </div>
                            }

                            <div class="mb-3">
                                <label class="form-label">Current Password</label>
                                <InputText type="password" @bind-Value="PasswordInput.CurrentPassword" class="form-control" />
                                <ValidationMessage For="() => PasswordInput.CurrentPassword" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">New Password</label>
                                <InputText type="password" @bind-Value="PasswordInput.NewPassword" class="form-control" />
                                <ValidationMessage For="() => PasswordInput.NewPassword" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Confirm Password</label>
                                <InputText type="password" @bind-Value="PasswordInput.ConfirmPassword" class="form-control" />
                                <ValidationMessage For="() => PasswordInput.ConfirmPassword" class="text-danger" />
                            </div>

                            <button type="submit" class="btn btn-warning w-100" disabled="@isChangingPassword">
                                @if (isChangingPassword)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Changing...</span>
                                }
                                else
                                {
                                    <i class="bi bi-key"></i>
                                    <span> Change Password</span>
                                }
                            </button>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationUser? currentUser;
    private string message = string.Empty;
    private bool isSuccess = false;
    private bool isUpdating = false;
    private IBrowserFile? avatarFile;
    private string? previewAvatarUrl;

    private string passwordMessage = string.Empty;
    private bool isPasswordSuccess = false;
    private bool isChangingPassword = false;

    private ProfileInput Input { get; set; } = new();
    private ChangePasswordInput PasswordInput { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            
            if (currentUser != null)
            {
                Input.Name = currentUser.Name ?? "";
                Input.Email = currentUser.Email ?? "";
                Input.StudentId = currentUser.StudentId ?? "";
                Input.PhoneNumber = currentUser.PhoneNumber ?? "";
                Input.DOB = currentUser.DOB;
                Input.Address = currentUser.Address ?? "";
                previewAvatarUrl = currentUser.Avatar;
            }
        }
    }

    private async Task HandleAvatarUpload(InputFileChangeEventArgs e)
    {
        avatarFile = e.File;
        
        // Create preview URL
        if (avatarFile != null)
        {
            var buffer = new byte[avatarFile.Size];
            await avatarFile.OpenReadStream(5 * 1024 * 1024).ReadAsync(buffer);
            var imageType = avatarFile.ContentType;
            previewAvatarUrl = $"data:{imageType};base64,{Convert.ToBase64String(buffer)}";
        }
    }

    private async Task UpdateProfile()
    {
        if (currentUser == null) return;

        isUpdating = true;
        try
        {
            // Handle avatar upload if a file was selected
            if (avatarFile != null)
            {
                var uploadResult = await FileUploadService.UploadAvatarAsync(avatarFile, currentUser.Id);
                
                if (uploadResult.Success)
                {
                    // Delete old avatar if it exists and is not a URL
                    if (!string.IsNullOrEmpty(currentUser.Avatar) && currentUser.Avatar.StartsWith("/uploads"))
                    {
                        FileUploadService.DeleteAvatar(currentUser.Avatar);
                    }
                    
                    currentUser.Avatar = uploadResult.FilePath;
                }
                else
                {
                    message = uploadResult.ErrorMessage ?? "Error uploading avatar";
                    isSuccess = false;
                    return;
                }
            }

            currentUser.Name = Input.Name;
            currentUser.PhoneNumber = Input.PhoneNumber;
            currentUser.DOB = Input.DOB;
            currentUser.Address = Input.Address;

            var result = await UserManager.UpdateAsync(currentUser);
            
            if (result.Succeeded)
            {
                message = "Profile updated successfully!";
                isSuccess = true;
                previewAvatarUrl = currentUser.Avatar;
                avatarFile = null;
            }
            else
            {
                message = "An error occurred: " + string.Join(", ", result.Errors.Select(e => e.Description));
                isSuccess = false;
            }
        }
        finally
        {
            isUpdating = false;
        }
    }

    private async Task ChangePassword()
    {
        if (currentUser == null) return;

        isChangingPassword = true;
        try
        {
            var result = await UserManager.ChangePasswordAsync(currentUser, 
                PasswordInput.CurrentPassword, 
                PasswordInput.NewPassword);
            
            if (result.Succeeded)
            {
                passwordMessage = "Password changed successfully!";
                isPasswordSuccess = true;
                PasswordInput = new(); // Reset form
            }
            else
            {
                passwordMessage = "An error occurred: " + string.Join(", ", result.Errors.Select(e => e.Description));
                isPasswordSuccess = false;
            }
        }
        finally
        {
            isChangingPassword = false;
        }
    }

    private void HandleImageError()
    {
        // Handle when avatar URL is invalid
        message = "Invalid avatar URL. Please check again.";
        isSuccess = false;
    }

    private class ProfileInput
    {
        [Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = "";

        public string Email { get; set; } = "";
        public string StudentId { get; set; } = "";

        [Phone(ErrorMessage = "Invalid phone number")]
        public string? PhoneNumber { get; set; }

        public DateTime? DOB { get; set; }
        public string? Address { get; set; }
    }

    private class ChangePasswordInput
    {
        [Required(ErrorMessage = "Please enter your current password")]
        public string CurrentPassword { get; set; } = "";

        [Required(ErrorMessage = "Please enter a new password")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string NewPassword { get; set; } = "";

        [Required(ErrorMessage = "Please confirm your password")]
        [Compare(nameof(NewPassword), ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = "";
    }
}
