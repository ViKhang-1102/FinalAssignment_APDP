@page "/student/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@attribute [Authorize(Roles = "Student")]
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IDbContextFactory<ApplicationDbContext> DbFactory

<PageTitle>Personal Information</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0"><i class="bi bi-person-circle text-primary"></i> Personal Information</h1>
        </div>
        <div>
            <a href="/student/edit-profile" class="btn btn-primary me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="/student/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    @if (currentUser == null)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <div class="row">
            <!-- Basic Information -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Avatar</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(currentUser.Avatar))
                        {
                            <img src="@currentUser.Avatar" class="img-fluid rounded-circle mb-3" 
                                 style="width: 200px; height: 200px; object-fit: cover;" alt="Avatar" />
                        }
                        else
                        {
                            <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                 style="width: 200px; height: 200px;">
                                <i class="bi bi-person-fill text-white" style="font-size: 5rem;"></i>
                            </div>
                        }
                        <h4 class="mb-0">@currentUser.Name</h4>
                        <p class="text-muted">@currentUser.Email</p>
                    </div>
                </div>

                <!-- Academic Statistics -->
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Academic Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Current Courses:</span>
                            <strong>@currentEnrollments</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Completed Courses:</span>
                            <strong>@completedCourses</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>GPA:</span>
                            <strong>@gpa</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Classification:</span>
                            <strong class="@GetGPAClass()">@classification</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Information -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Detailed Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Full Name:</dt>
                            <dd class="col-sm-8">@currentUser.Name</dd>

                            <dt class="col-sm-4">Student ID:</dt>
                            <dd class="col-sm-8">@(currentUser.StudentId ?? "N/A")</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@currentUser.Email</dd>

                            <dt class="col-sm-4">Phone Number:</dt>
                            <dd class="col-sm-8">@(currentUser.PhoneNumber ?? "Not updated")</dd>

                            <dt class="col-sm-4">Date of Birth:</dt>
                            <dd class="col-sm-8">@(currentUser.DOB?.ToString("dd/MM/yyyy") ?? "Not updated")</dd>

                            <dt class="col-sm-4">Address:</dt>
                            <dd class="col-sm-8">@(currentUser.Address ?? "Not updated")</dd>

                            <dt class="col-sm-4">Account Status:</dt>
                            <dd class="col-sm-8">@(currentUser.EmailConfirmed ? "Verified" : "Not verified")</dd>
                        </dl>
                    </div>
                </div>

                <!-- Academic History -->
                <div class="card shadow-sm mt-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0">Current Courses</h5>
                    </div>
                    <div class="card-body">
                        @if (enrollments.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Course Code</th>
                                            <th>Course Name</th>
                                            <th>Class</th>
                                            <th>Lecturer</th>
                                            <th>Semester</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var enrollment in enrollments)
                                        {
                                            <tr>
                                                <td>@enrollment.Course?.Subject?.Code</td>
                                                <td>@enrollment.Course?.Subject?.Name</td>
                                                <td>@enrollment.Course?.Name</td>
                                                <td>@enrollment.Course?.Lecture?.Name</td>
                                                <td>@enrollment.Course?.Semester?.Name</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No courses enrolled yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private ApplicationUser? currentUser;
    private List<Enrollment> enrollments = new();
    private int currentEnrollments = 0;
    private int completedCourses = 0;
    private string gpa = "N/A";
    private string classification = "N/A";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            
            if (currentUser != null)
            {
                using var context = DbFactory.CreateDbContext();
                
                enrollments = await context.Enrollments
                    .Include(e => e.Course)
                        .ThenInclude(c => c.Subject)
                    .Include(e => e.Course)
                        .ThenInclude(c => c.Lecture)
                    .Include(e => e.Course)
                        .ThenInclude(c => c.Semester)
                    .Where(e => e.StudentID == currentUser.Id)
                    .ToListAsync();

                currentEnrollments = enrollments.Count;

                // Calculate GPA and statistics
                var grades = await context.Grades
                    .Where(g => g.StudentID == currentUser.Id)
                    .ToListAsync();

                if (grades.Any())
                {
                    var validGrades = grades.Where(g => g.AverageScore.HasValue).ToList();
                    if (validGrades.Any())
                    {
                        double avgScore = validGrades.Average(g => g.AverageScore!.Value);
                        gpa = avgScore.ToString("F1");
                        classification = GetClassification(avgScore);
                        completedCourses = grades.Count(g => g.IsPassed);
                    }
                }
            }
        }
    }

    private string GetClassification(double avgScore)
    {
        // Grade scale 0-100
        if (avgScore >= 80) return "Excellent";
        if (avgScore >= 65) return "Good";
        return "Fair";
    }

    private string GetGPAClass()
    {
        return classification switch
        {
            "Excellent" => "text-success",
            "Good" => "text-warning",
            _ => "text-danger"
        };
    }
}
