@page "/semesters/edit"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Semester</PageTitle>

@if (Semester is null)
{
    <p class="text-slate-500">Loading…</p>
}
else
{
    <div class="max-w-2xl space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Edit Semester</h1>
            <p class="text-sm text-slate-500">Adjust the name and save.</p>
        </div>

        <div class="rounded-2xl bg-white p-6 shadow-sm">
            <EditForm method="post" Model="Semester" OnValidSubmit="UpdateSemester" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert" class="mb-4 text-sm text-rose-600" />
                <input type="hidden" name="Semester.Id" value="@Semester.Id" />
                <div class="space-y-1">
                    <label for="name" class="text-sm font-medium text-slate-700">Name</label>
                    <InputText id="name" @bind-Value="Semester.Name" class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" />
                    <ValidationMessage For="() => Semester.Name" class="text-sm text-rose-600" />
                </div>
                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-indigo-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500">Save</button>
                    <a href="/semesters" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Semester? Semester { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Semester ??= await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (Semester is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Semester!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!SemesterExists(Semester!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/semesters");
    }

    private bool SemesterExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Semesters.Any(e => e.Id == id);
    }
}
