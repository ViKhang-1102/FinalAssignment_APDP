@page "/semesters/edit"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Semester</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Semester
                    </h2>
                    <p class="text-muted mb-0">Update academic term details.</p>
                </div>
                <a href="/semesters" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            @if (Semester is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading semester data...</span>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">

                        <EditForm method="post" Model="Semester" OnValidSubmit="UpdateSemester" FormName="edit" Enhance>
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                            </div>

                            <input type="hidden" name="Semester.Id" value="@Semester.Id" />

                            <div class="mb-4">
                                <label for="name" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-input-cursor-text me-1"></i>Semester Name
                                </label>

                                <InputText id="name"
                                           @bind-Value="Semester.Name"
                                           class="form-control form-control-lg"
                                           placeholder="e.g. Spring 2025" />

                                <ValidationMessage For="() => Semester.Name" class="text-danger small mt-1" />
                                <div class="form-text text-muted small">
                                    Example format: Season Year (Fall 2024, Summer 2025).
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/semesters" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                                <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>

                        </EditForm>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
    .bg-soft-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    /* Button Gradient */
    .btn-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #224abe);
        color: white;
        border: none;
    }

        .btn-gradient-primary:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
</style>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Semester? Semester { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Semester ??= await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (Semester is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Semester!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!SemesterExists(Semester!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/semesters");
    }

    private bool SemesterExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Semesters.Any(e => e.Id == id);
    }
}
