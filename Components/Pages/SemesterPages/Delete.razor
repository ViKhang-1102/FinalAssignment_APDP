@page "/semesters/delete"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Semester</PageTitle>

@if (semester is null)
{
    <p class="text-slate-500">Loading…</p>
}
else
{
    <div class="max-w-2xl space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Delete semester</h1>
            <p class="text-sm text-slate-500">This action cannot be undone.</p>
        </div>

        <div class="rounded-2xl bg-white p-6 shadow-sm">
            <dl class="divide-y divide-slate-100 text-sm">
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Name</dt>
                    <dd class="col-span-2 text-slate-900">@semester.Name</dd>
                </div>
            </dl>

            <EditForm method="post" Model="semester" OnValidSubmit="DeleteSemester" FormName="delete" Enhance>
                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-rose-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-rose-500">Delete</button>
                    <a href="/semesters" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private Semester? semester;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        semester = await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (semester is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Semesters.Remove(semester!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/semesters");
    }
}
