@page "/semesters/delete"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Semester</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-8">

            @if (semester is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-danger mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading semester data...</span>
                </div>
            }
            else
            {
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Semester
                    </h2>
                    <p class="text-muted">Are you sure you want to remove this academic term?</p>
                </div>

                <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                    <div class="bg-danger h-1"></div>

                    <div class="card-body p-4 p-md-5 text-center position-relative">

                        <div class="position-absolute top-50 start-50 translate-middle opacity-10" style="z-index: 0;">
                            <i class="bi bi-calendar-week-fill text-danger" style="font-size: 10rem;"></i>
                        </div>

                        <div class="position-relative" style="z-index: 1;">

                            <h5 class="text-uppercase text-secondary fw-bold small mb-4">You are deleting:</h5>

                            <div class="bg-light rounded-4 p-4 mb-4 border border-danger border-opacity-10 shadow-sm">
                                <div class="mb-2">
                                    <i class="bi bi-calendar-week-fill text-success fs-1"></i>
                                </div>
                                <h3 class="fw-bold text-dark mb-0">@semester.Name</h3>
                                <small class="text-muted">Semester Name</small>
                            </div>

                            <EditForm method="post" Model="semester" OnValidSubmit="DeleteSemester" FormName="delete" Enhance>
                                <div class="d-grid gap-2">

                                    <button type="submit" class="btn btn-gradient-danger btn-lg rounded-pill shadow-sm fw-bold" disabled="@(semester is null)">
                                        <i class="bi bi-trash3-fill me-2"></i>Confirm Delete
                                    </button>

                                    <a href="/semesters" class="btn btn-link text-decoration-none text-secondary fw-bold mt-2">
                                        Cancel
                                    </a>
                                </div>
                            </EditForm>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-danger.h-1 {
        height: 6px;
    }

    .opacity-10 {
        opacity: 0.05;
    }

    .btn-gradient-danger {
        background: linear-gradient(45deg, #e74a3b, #c0392b);
        border: none;
        color: white;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-gradient-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(231, 74, 59, 0.4);
        color: white;
    }
</style>

@code {
    private Semester? semester;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        semester = await context.Semesters.FirstOrDefaultAsync(m => m.Id == Id);

        if (semester is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSemester()
    {
        using var context = DbFactory.CreateDbContext();
        context.Semesters.Remove(semester!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/semesters");
    }
}
