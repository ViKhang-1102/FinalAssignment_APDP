@page "/courses/delete"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Course</PageTitle>

@if (course is null)
{
    <p class="text-slate-500">Loading…</p>
}
else
{
    <div class="max-w-3xl space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Delete course</h1>
            <p class="text-sm text-slate-500">This action cannot be undone.</p>
        </div>

        <div class="rounded-2xl bg-white p-6 shadow-sm">
            <dl class="divide-y divide-slate-100 text-sm">
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Name</dt>
                    <dd class="col-span-2 text-slate-900">@course.Name</dd>
                </div>
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Subject</dt>
                    <dd class="col-span-2 text-slate-900">@course.Subject?.Name</dd>
                </div>
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Semester</dt>
                    <dd class="col-span-2 text-slate-900">@course.Semester?.Name</dd>
                </div>
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Lecturer</dt>
                    <dd class="col-span-2 text-slate-900">@GetLecturerDisplayName(course.Lecture, course.LectureID)</dd>
                </div>
            </dl>

            <EditForm method="post" Model="course" OnValidSubmit="DeleteCourse" FormName="delete" Enhance>
                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-rose-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-rose-500">Delete</button>
                    <a href="/courses" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}
<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Courses</p>
        <h1 class="@UiClasses.SectionTitle">Delete Course</h1>
        <p class="@UiClasses.SectionSubtitle">Confirm removal of this course record from the catalog.</p>
    </div>

    @if (course is null)
    {
        <div class="@UiClasses.Card text-center text-slate-500">
            <span class="inline-flex items-center gap-2 text-sm"><i class="bi bi-arrow-counterclockwise animate-spin"></i> Loading course...</span>
        </div>
    }
    else
    {
        <div class="@UiClasses.Card space-y-5">
            <div class="rounded-2xl bg-slate-50 p-4 text-sm text-slate-600">
                <i class="bi bi-exclamation-triangle-fill text-amber-500 me-2"></i>
                This action cannot be undone. Students assigned to this course will lose the linkage.
            </div>
            <dl class="@UiClasses.DetailList">
                <div>
                    <dt class="@UiClasses.Label">Name</dt>
                    <dd class="text-base text-slate-900">@course.Name</dd>
                </div>
                <div>
                    <dt class="@UiClasses.Label">Subject ID</dt>
                    <dd class="text-base text-slate-900">@course.SubjectID</dd>
                </div>
                <div>
                    <dt class="@UiClasses.Label">Semester ID</dt>
                    <dd class="text-base text-slate-900">@course.SemesterID</dd>
                </div>
                <div>
                    <dt class="@UiClasses.Label">Lecturer ID</dt>
                    <dd class="text-base text-slate-900">@course.LectureID</dd>
                </div>
            </dl>
            <EditForm method="post" Model="course" OnValidSubmit="DeleteCourse" FormName="delete" Enhance>
                <div class="flex flex-wrap gap-3">
                    <button type="submit" class="@UiClasses.DangerButton" disabled="@(course is null)"><i class="bi bi-trash"></i> Delete course</button>
                    <a class="@UiClasses.GhostButton" href="@AppRoutes.Courses"><i class="bi bi-arrow-left"></i> Back to list</a>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private Course? course;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        course = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Semester)
            .Include(c => c.Lecture)
            .FirstOrDefaultAsync(m => m.Id == Id);

        if (course is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCourse()
    {
        using var context = DbFactory.CreateDbContext();
        var entity = await context.Courses.FindAsync(course!.Id);
        if (entity is null)
        {
            NavigationManager.NavigateTo("/courses");
            return;
        }

        context.Courses.Remove(entity);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo(AppRoutes.Courses);
    }

    private static string GetLecturerDisplayName(ApplicationUser? lecturer, string? fallbackId)
    {
        if (lecturer is null)
        {
            return fallbackId ?? string.Empty;
        }

        var parts = new List<string>();
        if (!string.IsNullOrWhiteSpace(lecturer.Name))
        {
            parts.Add(lecturer.Name!);
        }

        if (!string.IsNullOrWhiteSpace(lecturer.Email))
        {
            parts.Add(lecturer.Email!);
        }

        if (!string.IsNullOrWhiteSpace(lecturer.StudentId))
        {
            parts.Add($"ID: {lecturer.StudentId}");
        }

        return parts.Count == 0 ? fallbackId ?? string.Empty : string.Join(" | ", parts);
    }
}
