@page "/courses/create"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Course</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Courses</p>
        <h1 class="@UiClasses.SectionTitle">Create Course</h1>
        <p class="@UiClasses.SectionSubtitle">Add a class offering and link it to a subject, semester, and lecturer.</p>
    </div>

    <div class="@UiClasses.Card">
        <EditForm method="post" Model="Course" OnValidSubmit="AddCourse" FormName="create" Enhance class="space-y-5">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-rose-500 text-sm" role="alert" />

            <div class="grid gap-4 md:grid-cols-2">
                <div class="@UiClasses.FieldStack">
                    <label for="name" class="@UiClasses.Label">Name</label>
                    <InputText id="name" @bind-Value="Course.Name" class="@UiClasses.Input" />
                    <ValidationMessage For="() => Course.Name" class="text-rose-500 text-xs" />
                </div>
                <div class="@UiClasses.FieldStack">
                    <label for="subjectid" class="@UiClasses.Label">Subject</label>
                    <InputSelect id="subjectid" @bind-Value="Course.SubjectID" class="@UiClasses.Input">
                        @foreach (var subject in Subjects)
                        {
                            <option value="@subject.Id">@subject.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Course.SubjectID" class="text-rose-500 text-xs" />
                </div>
                <div class="@UiClasses.FieldStack">
                    <label for="semesterid" class="@UiClasses.Label">Semester</label>
                    <InputSelect id="semesterid" @bind-Value="Course.SemesterID" class="@UiClasses.Input">
                        @foreach (var semester in Semesters)
                        {
                            <option value="@semester.Id">@semester.Name</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Course.SemesterID" class="text-rose-500 text-xs" />
                </div>
                <div class="@UiClasses.FieldStack">
                    <label for="lectureid" class="@UiClasses.Label">Lecturer</label>
                    <InputSelect id="lectureid" @bind-Value="Course.LectureID" class="@UiClasses.Input">
                        @foreach (var lecturer in Lecturers)
                        {
                            <option value="@lecturer.Id">@GetUserLabel(lecturer)</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => Course.LectureID" class="text-rose-500 text-xs" />
                </div>
            </div>

            <div class="flex flex-wrap gap-3 pt-2">
                <button type="submit" class="@UiClasses.PrimaryButton"><i class="bi bi-save"></i> Save Course</button>
                <a class="@UiClasses.GhostButton" href="@AppRoutes.Courses"><i class="bi bi-arrow-left"></i> Cancel</a>
            </div>
        </EditForm>
    </div>

    <a class="@UiClasses.LinkButton" href="@AppRoutes.Courses"><i class="bi bi-arrow-left"></i> Back to courses</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Course Course { get; set; } = new();
    private List<Subject> Subjects { get; set; } = new();
    private List<Semester> Semesters { get; set; } = new();
    private List<ApplicationUser> Lecturers { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Subjects = await context.Subjects
            .OrderBy(s => s.Name)
            .ToListAsync();
        Semesters = await context.Semesters
            .OrderBy(s => s.Name)
            .ToListAsync();
        Lecturers = await context.Users
            .OrderBy(u => u.Name ?? u.Email ?? u.UserName)
            .ToListAsync();

        if (Course.SubjectID == 0 && Subjects.Count > 0)
        {
            Course.SubjectID = Subjects[0].Id;
        }

        if (Course.SemesterID == 0 && Semesters.Count > 0)
        {
            Course.SemesterID = Semesters[0].Id;
        }

        if (string.IsNullOrEmpty(Course.LectureID) && Lecturers.Count > 0)
        {
            Course.LectureID = Lecturers[0].Id;
        }
    }

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddCourse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Courses.Add(Course);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo(AppRoutes.Courses);
    }

    private static string GetUserLabel(ApplicationUser user)
    {
        var identity = user.Name;
        var secondary = user.Email ?? user.UserName ?? user.Id;
        return string.IsNullOrWhiteSpace(identity) ? secondary : $"{identity} ({secondary})";
    }
}
