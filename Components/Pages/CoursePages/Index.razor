@page "/courses"
@attribute [Authorize(Roles = "Admin,Lecture,Lecturer")]
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@using FinalAssignemnt_APDP.Constants
@implements IAsyncDisposable
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory

<PageTitle>Courses</PageTitle>

<div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-slate-900">Courses</h1>
    <AuthorizeView Roles="Admin">
        <Authorized>
            <a href="courses/create" class="inline-flex items-center gap-2 rounded-full bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                <span class="text-lg">+</span> New Course
            </a>
        </Authorized>
    </AuthorizeView>
</div>

@if (courses.Count == 0)
{
    <div class="mt-6 rounded-md border border-dashed border-slate-200 bg-white/60 p-6 text-center text-slate-500">
        No courses found.
    </div>
}
else
{
    <div class="mt-6 overflow-hidden rounded-xl bg-white shadow-sm">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead class="bg-slate-50">
                <tr class="text-left text-xs font-semibold uppercase tracking-wide text-slate-600">
                    <th class="px-6 py-3">Name</th>
                    <th class="px-6 py-3">Subject</th>
                    <th class="px-6 py-3">Semester</th>
                    <th class="px-6 py-3">Lecturer</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 bg-white">
                @foreach (var course in courses)
                {
                    <tr class="hover:bg-slate-50">
                        <td class="px-6 py-4 font-medium text-slate-900">@course.Name</td>
                        <td class="px-6 py-4 text-slate-600">@GetSubjectLabel(course)</td>
                        <td class="px-6 py-4 text-slate-600">@GetSemesterLabel(course)</td>
                        <td class="px-6 py-4 text-slate-600">@GetLecturerLabel(course)</td>
                        <td class="px-6 py-4">
                            <div class="flex items-center justify-end gap-2">
                                <a href="@($"courses/details?id={course.Id}")" class="inline-flex items-center rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-900">Details</a>
                                <AuthorizeView Roles="Admin">
                                    <Authorized>
                                        <a href="@($"courses/edit?id={course.Id}")" class="inline-flex items-center rounded-full bg-indigo-600 px-3 py-1 text-xs font-semibold text-white transition hover:bg-indigo-500">Edit</a>
                                        <a href="@($"courses/delete?id={course.Id}")" class="inline-flex items-center rounded-full border border-rose-200 px-3 py-1 text-xs font-semibold text-rose-600 transition hover:bg-rose-50">Delete</a>
                                    </Authorized>
                                </AuthorizeView>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private ApplicationDbContext context = default!;
    private List<Course> courses = new();

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();
        courses = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Semester)
            .Include(c => c.Lecture)
            .OrderBy(c => c.Name)
            .ToListAsync();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();

    private static string GetSubjectLabel(Course course) => course.Subject?.Name ?? "Unassigned";
    private static string GetSemesterLabel(Course course) => course.Semester?.Name ?? "Unassigned";
    private static string GetLecturerLabel(Course course)
    {
        if (course.Lecture is null)
        {
            return course.LectureID ?? "Unassigned";
        }

        var identity = course.Lecture.Name;
        var secondary = course.Lecture.Email ?? course.Lecture.UserName ?? course.Lecture.Id;
        return string.IsNullOrWhiteSpace(identity) ? secondary : $"{identity}";
    }
}
