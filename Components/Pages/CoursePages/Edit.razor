@page "/courses/edit"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Course</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Course
                    </h2>
                    <p class="text-muted mb-0">Update course details and schedule.</p>
                </div>
                <a href="/courses" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            @if (Course is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading course data...</span>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">

                        <EditForm method="post" Model="Course" OnValidSubmit="UpdateCourse" FormName="edit" Enhance>
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                            </div>

                            <input type="hidden" name="Course.Id" value="@Course.Id" />

                            <div class="row g-3">
                                <div class="col-12 mb-3">
                                    <label for="name" class="form-label fw-bold text-secondary">
                                        <i class="bi bi-type me-1"></i>Course Name
                                    </label>
                                    <InputText id="name"
                                               @bind-Value="Course.Name"
                                               class="form-control form-control-lg"
                                               placeholder="Enter course name..." />
                                    <ValidationMessage For="() => Course.Name" class="text-danger small mt-1" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="subjectid" class="form-label fw-bold text-secondary">
                                        <i class="bi bi-collection me-1"></i>Subject
                                    </label>
                                    <InputSelect id="subjectid" @bind-Value="Course.SubjectID" class="form-select form-select-lg">
                                        <option value="">-- Select Subject --</option>
                                        @foreach (var subject in DbFactory.CreateDbContext().Subjects)
                                        {
                                            <option value="@subject.Id">@subject.Name</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="() => Course.SubjectID" class="text-danger small mt-1" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="semesterid" class="form-label fw-bold text-secondary">
                                        <i class="bi bi-calendar3 me-1"></i>Semester
                                    </label>
                                    <InputSelect id="semesterid" @bind-Value="Course.SemesterID" class="form-select form-select-lg">
                                        <option value="">-- Select Semester --</option>
                                        @foreach (var semester in DbFactory.CreateDbContext().Semesters)
                                        {
                                            <option value="@semester.Id">@semester.Name</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="() => Course.SemesterID" class="text-danger small mt-1" />
                                </div>

                                <div class="col-12 mb-4">
                                    <label for="lectureid" class="form-label fw-bold text-secondary">
                                        <i class="bi bi-person-video3 me-1"></i>Lecturer ID
                                    </label>
                                    <InputText id="lectureid"
                                               @bind-Value="Course.LectureID"
                                               class="form-control form-control-lg font-monospace"
                                               placeholder="e.g. LEC001" />
                                    <ValidationMessage For="() => Course.LectureID" class="text-danger small mt-1" />
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/courses" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                                <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>

                        </EditForm>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>

    .font-monospace {
        font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    }

    .form-control-lg, .form-select-lg {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }

    .bg-soft-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }
</style>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Course? Course { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Course ??= await context.Courses.FirstOrDefaultAsync(m => m.Id == Id);

        if (Course is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCourse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Course!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CourseExists(Course!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/courses");
    }

    private bool CourseExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Courses.Any(e => e.Id == id);
    }
}
