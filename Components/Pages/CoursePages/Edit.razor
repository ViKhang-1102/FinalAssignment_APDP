@page "/courses/edit"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit Course</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Courses</p>
        <h1 class="@UiClasses.SectionTitle">Edit Course</h1>
        <p class="@UiClasses.SectionSubtitle">Update the links between this course, its subject, semester, and lecturer.</p>
    </div>

    @if (Course is null)
    {
        <div class="@UiClasses.Card text-center text-slate-500">
            <span class="inline-flex items-center gap-2 text-sm"><i class="bi bi-arrow-counterclockwise animate-spin"></i> Loading course...</span>
        </div>
    }
    else
    {
        <div class="@UiClasses.Card">
            <EditForm method="post" Model="Course" OnValidSubmit="UpdateCourse" FormName="edit" Enhance class="space-y-5">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-rose-500 text-sm" role="alert" />
                <input type="hidden" name="Course.Id" value="@Course.Id" />

                <div class="grid gap-4 md:grid-cols-2">
                    <div class="@UiClasses.FieldStack">
                        <label for="name" class="@UiClasses.Label">Name</label>
                        <InputText id="name" @bind-Value="Course.Name" class="@UiClasses.Input" />
                        <ValidationMessage For="() => Course.Name" class="text-rose-500 text-xs" />
                    </div>
                    <div class="@UiClasses.FieldStack">
                        <label for="subjectid" class="@UiClasses.Label">Subject ID</label>
                        <InputNumber id="subjectid" @bind-Value="Course.SubjectID" class="@UiClasses.Input" />
                        <ValidationMessage For="() => Course.SubjectID" class="text-rose-500 text-xs" />
                    </div>
                    <div class="@UiClasses.FieldStack">
                        <label for="semesterid" class="@UiClasses.Label">Semester ID</label>
                        <InputNumber id="semesterid" @bind-Value="Course.SemesterID" class="@UiClasses.Input" />
                        <ValidationMessage For="() => Course.SemesterID" class="text-rose-500 text-xs" />
                    </div>
                    <div class="@UiClasses.FieldStack">
                        <label for="lectureid" class="@UiClasses.Label">Lecturer ID</label>
                        <InputText id="lectureid" @bind-Value="Course.LectureID" class="@UiClasses.Input" />
                        <ValidationMessage For="() => Course.LectureID" class="text-rose-500 text-xs" />
                    </div>
                </div>

                <div class="flex flex-wrap gap-3 pt-2">
                    <button type="submit" class="@UiClasses.PrimaryButton"><i class="bi bi-save"></i> Save Changes</button>
                    <a class="@UiClasses.GhostButton" href="@AppRoutes.Courses"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </EditForm>
        </div>
    }

    <a class="@UiClasses.LinkButton" href="@AppRoutes.Courses"><i class="bi bi-arrow-left"></i> Back to courses</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Course? Course { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Course ??= await context.Courses.FirstOrDefaultAsync(m => m.Id == Id);

        if (Course is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateCourse()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Course!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!CourseExists(Course!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo(AppRoutes.Courses);
    }

    private bool CourseExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Courses.Any(e => e.Id == id);
    }
}
