@page "/courses/details"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Course Details</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Courses</p>
        <h1 class="@UiClasses.SectionTitle">Course Details</h1>
        <p class="@UiClasses.SectionSubtitle">Review the metadata stored for this course.</p>
    </div>

    @if (course is null)
    {
        <div class="@UiClasses.Card text-center text-slate-500">
            <span class="inline-flex items-center gap-2 text-sm"><i class="bi bi-arrow-counterclockwise animate-spin"></i> Loading course...</span>
        </div>
    }
    else
    {
        <div class="@UiClasses.Card">
            <dl class="@UiClasses.DetailList">
                <div>
                    <dt class="@UiClasses.Label">Name</dt>
                    <dd class="text-base text-slate-900">@course.Name</dd>
                </div>
                <div>
                    <dt class="@UiClasses.Label">Subject</dt>
                    <dd class="text-base text-slate-900">@course.Subject?.Name ?? "Unassigned"</dd>
                </div>
                <div>
                    <dt class="@UiClasses.Label">Semester</dt>
                    <dd class="text-base text-slate-900">@course.Semester?.Name ?? "Unassigned"</dd>
                </div>
                <div>
                    <dt class="@UiClasses.Label">Lecturer</dt>
                    <dd class="text-base text-slate-900">@GetLecturerLabel()</dd>
                </div>
            </dl>
            <div class="flex flex-wrap gap-3 pt-4">
                <a class="@UiClasses.PrimaryButton" href="@AppRoutes.CoursesEdit(course.Id)"><i class="bi bi-pencil"></i> Edit</a>
                <a class="@UiClasses.GhostButton" href="@AppRoutes.Courses"><i class="bi bi-arrow-left"></i> Back to list</a>
            </div>
        </div>
    }
</div>

@code {
    private Course? course;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        course = await context.Courses
            .Include(c => c.Subject)
            .Include(c => c.Semester)
            .Include(c => c.Lecture)
            .FirstOrDefaultAsync(m => m.Id == Id);

        if (course is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private string GetLecturerLabel()
    {
        if (course?.Lecture is null)
        {
            return course?.LectureID ?? "Unassigned";
        }

        var identity = course.Lecture.Name;
        var secondary = course.Lecture.Email ?? course.Lecture.UserName ?? course.Lecture.Id;
        return string.IsNullOrWhiteSpace(identity) ? secondary : $"{identity} ({secondary})";
    }
}
