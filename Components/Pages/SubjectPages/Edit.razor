@page "/subjects/edit"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Edit Subject</PageTitle>

@if (Subject is null)
{
    <p class="text-slate-500">Loading…</p>
}
else
{
    <div class="max-w-2xl space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Edit Subject</h1>
            <p class="text-sm text-slate-500">Update the code or name and save.</p>
        </div>

        <div class="rounded-2xl bg-white p-6 shadow-sm">
            <EditForm method="post" Model="Subject" OnValidSubmit="UpdateSubject" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert" class="mb-4 text-sm text-rose-600" />
                <input type="hidden" name="Subject.Id" value="@Subject.Id" />
                <div class="grid gap-4 md:grid-cols-2">
                    <div class="space-y-1">
                        <label for="code" class="text-sm font-medium text-slate-700">Code</label>
                        <InputText id="code" @bind-Value="Subject.Code" class="w-full rounded-lg border border-slate-200 px-3 py-2 font-mono text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" />
                        <ValidationMessage For="() => Subject.Code" class="text-sm text-rose-600" />
                    </div>
                    <div class="space-y-1">
                        <label for="name" class="text-sm font-medium text-slate-700">Name</label>
                        <InputText id="name" @bind-Value="Subject.Name" class="w-full rounded-lg border border-slate-200 px-3 py-2 text-slate-900 focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-100" />
                        <ValidationMessage For="() => Subject.Name" class="text-sm text-rose-600" />
                    </div>
                </div>
                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-indigo-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-indigo-500">Save</button>
                    <a href="/subjects" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Subject? Subject { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Subject ??= await context.Subjects.FirstOrDefaultAsync(m => m.Id == Id);

        if (Subject is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateSubject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Subject!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!SubjectExists(Subject!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        Toasts.Enqueue("Cập nhật môn học thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo("/subjects");
    }

    private bool SubjectExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Subjects.Any(e => e.Id == id);
    }
}
