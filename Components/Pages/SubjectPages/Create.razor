@page "/subjects/create"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Create Subject</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-collection-fill me-2"></i>Create Subject
                    </h2>
                    <p class="text-muted mb-0">Add a new subject to the curriculum.</p>
                </div>
                <a href="/subjects" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5">

                    <EditForm method="post" Model="Subject" OnValidSubmit="AddSubject" FormName="create" Enhance>
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                        </div>

                        <div class="mb-4">
                            <label for="code" class="form-label fw-bold text-secondary">
                                <i class="bi bi-upc-scan me-1"></i>Subject Code
                            </label>

                            <InputText id="code"
                                       @bind-Value="Subject.Code"
                                       class="form-control form-control-lg font-monospace"
                                       placeholder="e.g. CS101" />

                            <ValidationMessage For="() => Subject.Code" class="text-danger small mt-1" />
                            <div class="form-text text-muted small">
                                Unique code to identify the subject (e.g., INT101, MTH202).
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="name" class="form-label fw-bold text-secondary">
                                <i class="bi bi-journal-text me-1"></i>Subject Name
                            </label>

                            <InputText id="name"
                                       @bind-Value="Subject.Name"
                                       class="form-control form-control-lg"
                                       placeholder="e.g. Introduction to Programming" />

                            <ValidationMessage For="() => Subject.Name" class="text-danger small mt-1" />
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/subjects" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                            <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                <i class="bi bi-check-lg me-2"></i>Create Subject
                            </button>
                        </div>

                    </EditForm>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    
    .font-monospace {
        font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace !important;
    }
</style>

@code {
    [SupplyParameterFromForm]
    private Subject Subject { get; set; } = new();

    private async Task AddSubject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Subjects.Add(Subject);
        await context.SaveChangesAsync();
        Toasts.Enqueue("Thêm môn học thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo("/subjects");
    }
}
