@page "/subjects/delete"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Delete Subject</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-8">

            @if (subject is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-danger mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading subject data...</span>
                </div>
            }
            else
            {
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Subject
                    </h2>
                    <p class="text-muted">Are you sure you want to delete this subject?</p>
                </div>

                <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-4">
                    <div class="bg-danger h-1"></div>

                    <div class="card-body p-4 p-md-5 text-center position-relative">

                        <div class="position-absolute top-50 start-50 translate-middle opacity-10" style="z-index: 0;">
                            <i class="bi bi-collection-fill text-danger" style="font-size: 10rem;"></i>
                        </div>

                        <div class="position-relative" style="z-index: 1;">

                            <h5 class="text-uppercase text-secondary fw-bold small mb-4">You are deleting:</h5>

                            <div class="bg-light rounded-4 p-4 mb-4 border border-danger border-opacity-10 shadow-sm">

                                <div class="mb-3">
                                    <i class="bi bi-collection-fill text-warning fs-1"></i>
                                </div>

                                <div class="mb-2">
                                    <span class="badge bg-white text-dark border border-secondary border-opacity-25 shadow-sm px-3 py-2 font-monospace fs-6">
                                        <i class="bi bi-upc-scan me-2 text-secondary"></i>@subject.Code
                                    </span>
                                </div>

                                <h3 class="fw-bold text-dark mb-0">@subject.Name</h3>
                            </div>

                            <EditForm method="post" Model="subject" OnValidSubmit="DeleteSubject" FormName="delete" Enhance>
                                <div class="d-grid gap-2">

                                    <button type="submit" class="btn btn-gradient-danger btn-lg rounded-pill shadow-sm fw-bold" disabled="@(subject is null)">
                                        <i class="bi bi-trash3-fill me-2"></i>Confirm Delete
                                    </button>

                                    <a href="/subjects" class="btn btn-link text-decoration-none text-secondary fw-bold mt-2">
                                        Cancel
                                    </a>
                                </div>
                            </EditForm>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-danger.h-1 {
        height: 6px;
    }

    .opacity-10 {
        opacity: 0.05;
    }

    .btn-gradient-danger {
        background: linear-gradient(45deg, #e74a3b, #c0392b);
        border: none;
        color: white;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-gradient-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 74, 59, 0.4);
            color: white;
        }
    
    .font-monospace {
        font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    }
</style>

@code {
    private Subject? subject;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        subject = await context.Subjects.FirstOrDefaultAsync(m => m.Id == Id);

        if (subject is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSubject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Subjects.Remove(subject!);
        await context.SaveChangesAsync();
        Toasts.Enqueue("Xóa môn học thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo("/subjects");
    }
}
