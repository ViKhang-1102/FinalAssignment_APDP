@page "/subjects/delete"
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Delete Subject</PageTitle>

@if (subject is null)
{
    <p class="text-slate-500">Loading…</p>
}
else
{
    <div class="max-w-2xl space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Delete subject</h1>
            <p class="text-sm text-slate-500">This action cannot be undone.</p>
        </div>

        <div class="rounded-2xl bg-white p-6 shadow-sm">
            <dl class="divide-y divide-slate-100 text-sm">
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Code</dt>
                    <dd class="col-span-2 font-mono text-slate-900">@subject.Code</dd>
                </div>
                <div class="grid grid-cols-3 gap-4 py-3">
                    <dt class="font-medium text-slate-500">Name</dt>
                    <dd class="col-span-2 text-slate-900">@subject.Name</dd>
                </div>
            </dl>

            <EditForm method="post" Model="subject" OnValidSubmit="DeleteSubject" FormName="delete" Enhance>
                <div class="mt-6 flex items-center gap-3">
                    <button type="submit" class="inline-flex items-center rounded-full bg-rose-600 px-5 py-2 text-sm font-semibold text-white transition hover:bg-rose-500">Delete</button>
                    <a href="/subjects" class="text-sm font-semibold text-slate-600 hover:text-slate-900">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private Subject? subject;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        subject = await context.Subjects.FirstOrDefaultAsync(m => m.Id == Id);

        if (subject is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSubject()
    {
        using var context = DbFactory.CreateDbContext();
        context.Subjects.Remove(subject!);
        await context.SaveChangesAsync();
        Toasts.Enqueue("Xóa môn h?c thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo("/subjects");
    }
}
