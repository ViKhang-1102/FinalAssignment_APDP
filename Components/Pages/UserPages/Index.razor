@page "/users"
@attribute [Authorize(Roles = "Admin,Lecture,Lecturer")]
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using FinalAssignemnt_APDP.Data
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager

<PageTitle>Users</PageTitle>

<div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-slate-900">Users</h1>
    <AuthorizeView Roles="Admin">
        <Authorized>
            <a href="users/create" class="inline-flex items-center gap-2 rounded-full bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-500">
                <span class="text-lg">+</span> New User
            </a>
        </Authorized>
    </AuthorizeView>
</div>

@if (Users.Count == 0)
{
    <div class="mt-6 rounded-md border border-dashed border-slate-200 bg-white/60 p-6 text-center text-slate-500">
        No users found.
    </div>
}
else
{
    <div class="mt-6 overflow-hidden rounded-xl bg-white shadow-sm">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead class="bg-slate-50">
                <tr class="text-left text-xs font-semibold uppercase tracking-wide text-slate-600">
                    <th class="px-6 py-3">Email</th>
                    <th class="px-6 py-3">Name</th>
                    <th class="px-6 py-3">Student ID</th>
                    <th class="px-6 py-3">Roles</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 bg-white">
                @foreach (var user in Users)
                {
                    <tr class="hover:bg-slate-50">
                        <td class="px-6 py-4 font-mono text-slate-900">@user.Email</td>
                        <td class="px-6 py-4 text-slate-900">@user.Name</td>
                        <td class="px-6 py-4 text-slate-700">@user.StudentId</td>
                        <td class="px-6 py-4 text-slate-700">@user.Roles</td>
                        <td class="px-6 py-4">
                            <div class="flex items-center justify-end gap-2">
                                <a href="@($"users/details?id={user.Id}")" class="inline-flex items-center rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition hover:border-slate-300 hover:text-slate-900">Details</a>
                                <AuthorizeView Roles="Admin">
                                    <Authorized>
                                        <a href="@($"users/edit?id={user.Id}")" class="inline-flex items-center rounded-full bg-indigo-600 px-3 py-1 text-xs font-semibold text-white transition hover:bg-indigo-500">Edit</a>
                                        <a href="@($"users/delete?id={user.Id}")" class="inline-flex items-center rounded-full border border-rose-200 px-3 py-1 text-xs font-semibold text-rose-600 transition hover:bg-rose-50">Delete</a>
                                    </Authorized>
                                </AuthorizeView>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<UserRow> Users { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var allUsers = await UserManager.Users.ToListAsync();
        Users = new List<UserRow>(allUsers.Count);
        foreach (var u in allUsers)
        {
            var roles = await UserManager.GetRolesAsync(u);
            Users.Add(new UserRow
            {
                Id = u.Id,
                Email = u.Email ?? "",
                Name = u.Name,
                StudentId = u.StudentId ?? "",
                Roles = string.Join(", ", roles)
            });
        }
    }

    private sealed class UserRow
    {
        public string Id { get; set; } = "";
        public string Email { get; set; } = "";
        public string Name { get; set; } = "";
        public string StudentId { get; set; } = "";
        public string Roles { get; set; } = "";
    }
}
