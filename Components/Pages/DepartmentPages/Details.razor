@page "/departments/details"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Department Details</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Structure</p>
        <h1 class="@UiClasses.SectionTitle">Department Details</h1>
        <p class="@UiClasses.SectionSubtitle">Review the current settings for this unit.</p>
    </div>

    @if (department is null)
    {
        <div class="@UiClasses.Card text-center text-slate-500">
            <span class="inline-flex items-center gap-2 text-sm"><i class="bi bi-arrow-counterclockwise animate-spin"></i> Loading department...</span>
        </div>
    }
    else
    {
        <div class="@UiClasses.Card">
            <dl class="@UiClasses.DetailList">
                <div>
                    <dt class="@UiClasses.Label">Name</dt>
                    <dd class="text-base text-slate-900">@department.Name</dd>
                </div>
            </dl>
            <div class="flex flex-wrap gap-3 pt-4">
                <a class="@UiClasses.PrimaryButton" href="@AppRoutes.DepartmentsEdit(department.Id)"><i class="bi bi-pencil"></i> Edit</a>
                <a class="@UiClasses.GhostButton" href="@AppRoutes.Departments"><i class="bi bi-arrow-left"></i> Back to list</a>
            </div>
        </div>
    }
</div>

@code {
    private Department? department;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        department = await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (department is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
