@page "/departments/create"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Create Department</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Structure</p>
        <h1 class="@UiClasses.SectionTitle">Create Department</h1>
        <p class="@UiClasses.SectionSubtitle">Register a new faculty or administrative unit.</p>
    </div>

    <div class="@UiClasses.Card">
        <EditForm method="post" Model="Department" OnValidSubmit="AddDepartment" FormName="create" Enhance class="space-y-5">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-rose-500 text-sm" role="alert" />
            <div class="@UiClasses.FieldStack">
                <label for="name" class="@UiClasses.Label">Name</label>
                <InputText id="name" @bind-Value="Department.Name" class="@UiClasses.Input" />
                <ValidationMessage For="() => Department.Name" class="text-rose-500 text-xs" />
            </div>
            <div class="flex flex-wrap gap-3">
                <button type="submit" class="@UiClasses.PrimaryButton"><i class="bi bi-save"></i> Save Department</button>
                <a class="@UiClasses.GhostButton" href="@AppRoutes.Departments"><i class="bi bi-arrow-left"></i> Cancel</a>
            </div>
        </EditForm>
    </div>

    <a class="@UiClasses.LinkButton" href="@AppRoutes.Departments"><i class="bi bi-arrow-left"></i> Back to departments</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Department Department { get; set; } = new();

    private async Task AddDepartment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Departments.Add(Department);
        await context.SaveChangesAsync();
        Toasts.Enqueue("Thêm phòng ban thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo(AppRoutes.Departments);
    }
}
