@rendermode InteractiveServer
@page "/departments/edit"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Edit Department</PageTitle>

<div class="@UiClasses.PageShell">
    <div>
        <p class="@UiClasses.SectionTag">Structure</p>
        <h1 class="@UiClasses.SectionTitle">Edit Department</h1>
        <p class="@UiClasses.SectionSubtitle">Update the name shown across student and admin surfaces.</p>
    </div>

    @if (Department is null)
    {
        <div class="@UiClasses.Card text-center text-slate-500">
            <span class="inline-flex items-center gap-2 text-sm"><i class="bi bi-arrow-counterclockwise animate-spin"></i> Loading department...</span>
        </div>
    }
    else
    {
        <div class="@UiClasses.Card">
            <EditForm method="post" Model="Department" OnValidSubmit="UpdateDepartment" FormName="edit" Enhance class="space-y-5">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-rose-500 text-sm" role="alert" />
                <input type="hidden" name="Department.Id" value="@Department.Id" />
                <div class="@UiClasses.FieldStack">
                    <label for="name" class="@UiClasses.Label">Name</label>
                    <InputText id="name" @bind-Value="Department.Name" class="@UiClasses.Input" />
                    <ValidationMessage For="() => Department.Name" class="text-rose-500 text-xs" />
                </div>
                <div class="flex flex-wrap gap-3">
                    <button type="submit" class="@UiClasses.PrimaryButton"><i class="bi bi-save"></i> Save Changes</button>
                    <a class="@UiClasses.GhostButton" href="@AppRoutes.Departments"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </EditForm>
        </div>
    }

    <a class="@UiClasses.LinkButton" href="@AppRoutes.Departments"><i class="bi bi-arrow-left"></i> Back to departments</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Department? Department { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Department ??= await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Department is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateDepartment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Department!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!DepartmentExists(Department!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        Toasts.Enqueue("Cập nhật phòng ban thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo(AppRoutes.Departments);
    }

    private bool DepartmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Departments.Any(e => e.Id == id);
    }
}
