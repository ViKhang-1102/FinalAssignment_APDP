@rendermode InteractiveServer
@page "/departments/edit"
@using Microsoft.EntityFrameworkCore
@using FinalAssignemnt_APDP.Data
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@inject FinalAssignemnt_APDP.Services.ToastQueue Toasts

<PageTitle>Edit Department</PageTitle>

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-primary mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Department
                    </h2>
                    <p class="text-muted mb-0">Update department information.</p>
                </div>
                <a href="/departments" class="btn btn-outline-secondary rounded-pill px-3">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>

            @if (Department is null)
            {
                <div class="d-flex flex-column align-items-center justify-content-center py-5">
                    <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="text-muted">Loading department data...</span>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">

                        <EditForm method="post" Model="Department" OnValidSubmit="UpdateDepartment" FormName="edit" Enhance>
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <ValidationSummary class="text-danger alert alert-danger border-0 bg-soft-danger" role="alert" />
                            </div>

                            <input type="hidden" name="Department.Id" value="@Department.Id" />

                            <div class="mb-4">
                                <label for="name" class="form-label fw-bold text-secondary">
                                    <i class="bi bi-tag-fill me-1"></i>Department Name
                                </label>

                                <InputText id="name"
                                           @bind-Value="Department.Name"
                                           class="form-control form-control-lg"
                                           placeholder="e.g. Faculty of Information Technology" />

                                <ValidationMessage For="() => Department.Name" class="text-danger small mt-1" />
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="/departments" class="btn btn-light btn-lg px-4 rounded-pill">Cancel</a>

                                <button type="submit" class="btn btn-gradient-primary btn-lg px-4 rounded-pill shadow-sm">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>

                        </EditForm>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
    .bg-soft-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #224abe);
        color: white;
        border: none;
    }

    .bg-soft-danger:hover {
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
</style>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Department? Department { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Department ??= await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (Department is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateDepartment()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Department!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!DepartmentExists(Department!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        Toasts.Enqueue("Cập nhật phòng ban thành công", FinalAssignemnt_APDP.Services.ToastType.Success);
        NavigationManager.NavigateTo("/departments");
    }

    private bool DepartmentExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Departments.Any(e => e.Id == id);
    }
}
