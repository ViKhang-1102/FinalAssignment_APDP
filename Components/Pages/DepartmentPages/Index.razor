@page "/departments"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using FinalAssignemnt_APDP.Data
@implements IAsyncDisposable
@inject IDbContextFactory<FinalAssignemnt_APDP.Data.ApplicationDbContext> DbFactory

<PageTitle>Department Management</PageTitle>

<div class="container py-5 fade-in">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-1">
                <i class="bi bi-bank2 me-2"></i>Department List
            </h2>
            <p class="text-muted mb-0">Manage university faculties and departments</p>
        </div>
        <div>
            <a href="departments/create" class="btn btn-gradient-primary px-4 py-2 rounded-pill d-inline-flex align-items-center">
                <i class="bi bi-plus-lg me-2"></i> Create Department
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-0">

            <QuickGrid Class="table table-borderless custom-table mb-0 align-middle" Items="context.Departments">

                <TemplateColumn Title="Department Name" Sortable="true" Class="ps-4">
                    <div class="d-flex align-items-center py-2">
                        <div class="bg-light text-danger rounded-circle p-2 me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="bi bi-buildings-fill"></i>
                        </div>
                        <span class="fw-bold text-dark fs-6">@context.Name</span>
                    </div>
                </TemplateColumn>

                <TemplateColumn Title="Actions" Class="text-end pe-4">
                    <div class="btn-group shadow-sm rounded-3" role="group">
                        <a href="@($"departments/edit?id={context.Id}")" class="btn btn-light btn-sm text-primary" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@($"departments/details?id={context.Id}")" class="btn btn-light btn-sm text-info" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a href="@($"departments/delete?id={context.Id}")" class="btn btn-light btn-sm text-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </TemplateColumn>

            </QuickGrid>
        </div>

        <div class="card-footer bg-white border-top border-light py-3 px-4">
            <small class="text-muted">
                <i class="bi bi-diagram-2 me-1"></i> Organizational Units
            </small>
        </div>
    </div>
</div>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
