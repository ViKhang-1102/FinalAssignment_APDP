@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <AuthorizeView Roles="Student" Context="studentContext">
            <Authorized>
                <div class="text-center mt-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Redirecting to your dashboard...</p>
                </div>
            </Authorized>
            <NotAuthorized>
                <h1>Welcome, @context.User.Identity?.Name!</h1>
                <p>Welcome to the Student Information Management System.</p>
            </NotAuthorized>
        </AuthorizeView>
    </Authorized>
    <NotAuthorized>
        <h1>Hello, world!</h1>
        <p>Welcome to your new app.</p>
        <p>Please <a href="/Account/Login">login</a> to continue.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (AuthenticationStateTask != null)
        {
            var authState = await AuthenticationStateTask;
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true && user.IsInRole("Student"))
            {
                Navigation.NavigateTo("/student/dashboard", forceLoad: false);
            }
        }
    }
}

